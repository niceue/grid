 */
.n-thead {
    overflow: hidden; zoom:1;
    background: #f9f9f9; color: #a8a8a8;
    border:1px solid $base-border-color; border-bottom:0;
    th {
        border-width:0 1px 0 0;
        font-weight: 300;
        text-align: center;
        white-space:nowrap; -o-text-overflow:ellipsis; text-overflow:ellipsis; overflow:hidden;
    }
    th.n-last {border-right:0}
}
.n-thead-wrap {
    position:relative; z-index:1;
    //width: 100%;
    overflow: hidden; zoom:1;
    //border-right:1px solid $base-border-color;
}

.n-tbody {
    //position: relative; 
    overflow: auto;
    max-width: 100%;
    background: #fff;
    border:1px solid $base-border-color; border-bottom:0;
    
    td {
        border-width:0 1px 1px 0;
        white-space:nowrap; -o-text-overflow:ellipsis; text-overflow:ellipsis; overflow:hidden;
    }
    td.n-last {border-right:0}
    //tr.n-last td {border-bottom:0;}
    tr.n-selected td,
    td.n-selected {
        &,& a {background: $base-selected-color; color: #fff;}
    }
    .n-selectable {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        cursor: default;
    }
}
.n-tbody-wrap {
    zoom:1;
}

.n-tfoot {
    line-height: 1.5em;
    padding: 9px .5em;
    background: #f9f9f9;
    border:1px solid $base-border-color;
    margin-top: -1px;
}


// Column resizing
.n-draging {cursor: col-resize;}

.n-fitwidth {
    display:block;
    table {width:100%;}
    td.n-last,
    th.n-last {border-right:0}
}

.n-hscroll {
    .n-thead {}
    .n-tbody {
        //*overflow-y: hidden;
    }
}

.n-vscroll {
    .n-thead {
        padding-right: 17px;
    }
    &.n-webkit .n-thead {
        padding-right: $webkit-scrollbar-width;
    }
}