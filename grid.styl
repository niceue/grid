$base-font-color   = #444
$base-link-color   = #4fa7f5
$base-selected-color = #4fa7f5
$base-border-color = #e5e5e5
$webkit-scrollbar-width = 17px

clearfix() {
    *zoom: 1;
    &:before, &:after{display:table;content:""}
    &:after{clear:both}
}

inline-block() {
    display: inline-block; *display: inline; *zoom: 1;
}

.n-grid {
    position: relative;
    display:inline-block;*display:inline;*zoom:1;
    font-family: "Microsoft Yahei UI Light","Microsoft Yahei",Arial;
    line-height: 1.8;
    max-width:100%;
    color: $base-font-color;

    table {
        table-layout:fixed;border-collapse:separate;border-spacing:0;empty-cells:show;
        margin:0;padding:0;border:0;
        width:0;
    }
    th {text-align:left;}
    th,td {padding: .5em; border-style: solid; border-color: $base-border-color;}
    
    .n-pager {
        clearfix()
        a {
            text-decoration: none; outline:0;
        }
    }
    .n-pager-nav,
    .n-pager-numbers,
    .n-pager-sizes {
        float:left;
        margin: 0 .3em;
        color: $base-font-color
    }
    .n-pager-numbers {
        a {
            float:none;
            inline-block();
            text-align: center;
            margin: 0 .4em;
            min-width: 1.4em;
            color: $base-font-color;
        }
        .n-pager-current {color: $base-link-color; cursor:default; pointer-events:none;}
        .n-disabled {color:#cecece;}
    }
    .n-pager-info {
        float:right; padding-left:1em; margin:0 .3em;
        color: #a8a8a8;
    }
    .n-frozen {
        position: absolute; z-index:1;
        background: #fff;
        .n-thead {padding:0;}
    }
    .n-dragline {
        position: absolute; z-index: 2;
        cursor: col-resize;
    }
    // Sorting
    .n-sortable {
        display: block;
        min-height: 18px;
        line-height: 18px;
        margin: -0.5em -0.6em -0.4em -0.6em;
        overflow: hidden;
        text-overflow: ellipsis;
        cursor: pointer;
        outline: 0;
        text-decoration: none;
    }
    .n-align-left {text-align:left;}
    .n-align-center {text-align:center;}
    .n-align-right {text-align:right;}
    .n-disabled {color:#cecece; cursor: not-allowed;}
    .invisible {
        opacity: 0;
        -webkit-transition: opacity 800ms linear;
        -moz-transition: opacity 800ms linear;
        transition: opacity 800ms linear;
    }

